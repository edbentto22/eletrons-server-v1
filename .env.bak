# Configurações do Servidor
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# Segurança
SECRET_KEY=your-secret-key-here-change-in-production
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Diretórios de Dados
DATA_DIR=./data
MODELS_DIR=./data/models
DATASETS_DIR=./data/datasets
OUTPUTS_DIR=./data/outputs
LOGS_DIR=./data/logs

# Configurações YOLO/Ultralytics
DEFAULT_MODEL=yolov8n
DEFAULT_DEVICE=auto
DEFAULT_EPOCHS=100
DEFAULT_BATCH_SIZE=16
DEFAULT_IMAGE_SIZE=640

# Configurações de Treinamento
MAX_CONCURRENT_JOBS=2
JOB_TIMEOUT_HOURS=24
AUTO_CLEANUP_DAYS=30

# Monitoramento do Sistema
SYSTEM_MONITOR_INTERVAL=5
GPU_MONITOR_ENABLED=true
DISK_USAGE_WARNING_THRESHOLD=80
MEMORY_USAGE_WARNING_THRESHOLD=85

# Configurações de Logging
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30
LOG_FORMAT=detailed

# Configurações de Performance
WORKERS=4
ENABLE_GZIP=true
STATIC_FILES_CACHE_MAX_AGE=3600

# Configurações de Desenvolvimento
RELOAD=false
ACCESS_LOG=true
USE_COLORS=true

# Configurações de Produção (descomente para produção)
# SSL_KEYFILE=./certs/key.pem
# SSL_CERTFILE=./certs/cert.pem
# TRUSTED_HOSTS=yourdomain.com,www.yourdomain.com